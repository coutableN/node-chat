<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Login | node-chat</title>
        <!-- bootstrap -->
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <!-- styles.css -->
        <link rel="stylesheet" href="/node-chat/css/styles.css">
    </head>

    <body>
        <div class="wrapper">
            <div class="text-center">
                <h1>Login</h1>
                <h3>node-chat</h3>
            </div>
            <div class="container">
                <div class="row d-flex flex-column justify-content-center align-items-center">
                    <form action="/nc-admin" method="post" class="form-group col-md-4">
                        <input type="text" name="login" id="login" class="form-control" placeholder="Login">
                        <input type="password" name="pwd" id="pwd" class="form-control" placeholder="Password">
                        <input type="submit" class="btn btn-primary submit-btn" value="Login">
                    </form>
                    <% if (errorLogin) { %>
                        <div class="alert alert-danger">
                            <p>Authentication failed !</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- scripts connexion webSocket -->
        <script src="/socket.io/socket.io.js"></script>
    </body>
</html>
